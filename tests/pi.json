]},

{"description": "Declaration with an invalid version",
"input": "<?xml version='2.0'?>",
"output":[
    { "Error" : "Error: invalid token 'Declaration' at 1:1\nCaused by: expected '1', found '2' at 1:16\n" }
]},

{"description": "Declaration with an invalid standalone",
"input": "<?xml version='1.0' standalone='true'?>",
"output":[
    { "Error" : "Error: invalid token 'Declaration' at 1:1\nCaused by: expected 'yn', found 't' at 1:33\n" }
]},

{"description": "Declaration with an invalid attribute 1",
"input": "<?xml version='1.0' yes='true'?>",
"output":[
    { "Error" : "Error: invalid token 'Declaration' at 1:1\nCaused by: expected '?', found 'y' at 1:21\n" }
]},

{"description": "Declaration with an invalid attribute 2",
"input": "<?xml version='1.0' encoding='UTF-8' standalone='yes' yes='true'?>",
"output":[
    { "Error" : "Error: invalid token 'Declaration' at 1:1\nCaused by: expected '?', found 'y' at 1:55\n" }
]},

