"input": "<?xml version='1.0' encoding=\"EUC-JP\"?>",
"output":[
    { "Declaration" : [ "1.0", "EUC-JP", null ] }
]},

{"description": "Declaration with all attributes",
"input": "<?xml version='1.0' encoding='UTF-8' standalone='yes'?>",
